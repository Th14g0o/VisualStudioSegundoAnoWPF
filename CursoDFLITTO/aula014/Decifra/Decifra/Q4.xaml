<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decifra.Q4"
             Title="Acerte o anime"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Label Text="Acerte o anime" FontSize="25" TextColor="Green" HorizontalOptions="Center"/>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Label Text="Anime " HorizontalOptions="End" FontSize="36" TextColor="White"/>
                <Label Text="04" HorizontalOptions="Start" FontSize="36" TextColor="Green"/>
            </StackLayout>
            <Label Text="Uma criança sem mãe, de uma ilha remota, parte em uma jornada para encontrar seu pai, que o abandonou" HorizontalTextAlignment="Center" TextColor="DeepSkyBlue"/>
            <Image x:Name="Imagem" Source="imgs/KaitoPc.png" VerticalOptions="CenterAndExpand"/>
            <Button Text="Hunter x Hunter" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Naruto" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Tokyo Ghoul Pinto"  Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>