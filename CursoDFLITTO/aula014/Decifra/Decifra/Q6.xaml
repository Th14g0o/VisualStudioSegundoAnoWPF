<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decifra.Q6"
             Title="Acerte o anime"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Label Text="Acerte o anime" FontSize="25" TextColor="Green" HorizontalOptions="Center"/>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Label Text="Anime " HorizontalOptions="End" FontSize="36" TextColor="White"/>
                <Label Text="06" HorizontalOptions="Start" FontSize="36" TextColor="Green"/>
            </StackLayout>
            <Label Text="O jovem, outrora odiado, tem que resgatar a mulher que ama de um pseudo-semideus na lua" HorizontalTextAlignment="Center" TextColor="DeepSkyBlue"/>
            <Image x:Name="Imagem" Source="imgs/HinataPc.png" VerticalOptions="CenterAndExpand"/>
            <Button Text="Naruto Prison Blood" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Naruto The Last" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Naruto Road To Ninja"  Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>