<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decifra.Q5"
             Title="Acerte o anime"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Label Text="Acerte o anime" FontSize="25" TextColor="Green" HorizontalOptions="Center"/>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Label Text="Anime " HorizontalOptions="End" FontSize="36" TextColor="White"/>
                <Label Text="05" HorizontalOptions="Start" FontSize="36" TextColor="Green"/>
            </StackLayout>
            <Label Text="Um garoto parte em uma jornada para se tornar um mestre nas batalhas com seus monstrinhos" HorizontalTextAlignment="Center" TextColor="DeepSkyBlue"/>
            <Image x:Name="Imagem" Source="imgs/GeovanyPc.png" VerticalOptions="CenterAndExpand"/>
            <Button Text="Yugi-Oh GX" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Digimon" Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            <Button Text="Pokemon"  Margin="40, 0" Clicked="Verificar" BackgroundColor="DeepSkyBlue" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>