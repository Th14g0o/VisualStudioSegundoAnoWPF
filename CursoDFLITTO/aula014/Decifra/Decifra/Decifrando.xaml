<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decifra.Decifrando"
             Title="Anime Quiz Br Full HD"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Label Text="Anime Quiz" HorizontalOptions="End" FontSize="36" TextColor="White"/>
                <Label Text="(Facil)" HorizontalOptions="Start" FontSize="36" TextColor="Green"/>
            </StackLayout>
            <Image x:Name="Imagem" Source="imgs/DestaqueInicialPc.png" VerticalOptions="CenterAndExpand"/>
            <Button x:Name="Inicio" Text="COMEÇAR" HorizontalOptions="Center" FontSize="36" BorderColor="White" Clicked="Inicio_Clicked" BackgroundColor="DeepSkyBlue" TextColor="White" BorderWidth="3"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>