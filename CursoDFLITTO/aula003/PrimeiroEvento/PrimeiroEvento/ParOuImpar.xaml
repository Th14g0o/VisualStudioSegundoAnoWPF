<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroEvento.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determine Se Um Numero É Par ou Impar" />
            <Entry x:Name="Valor"  Keyboard="Numeric" Placeholder="Digite um numero aqui" />
            <Button x:Name="ExecutarVerificar" Text="VERIFICAR" />
            <Label x:Name="Resposta" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>