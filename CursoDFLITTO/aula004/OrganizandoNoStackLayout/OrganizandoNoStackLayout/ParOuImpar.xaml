<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizandoNoStackLayout.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="DETERMINE SE UM NUMERO E PAR OU IMPAR"/>
            <Entry x:Name="Valor" Placeholder="digite o numero aqui" Keyboard="Numeric"/>
            <Button x:Name="ExecutarVerificar" Text="VERIFICAR" />
            <Label x:Name="Resposta" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>