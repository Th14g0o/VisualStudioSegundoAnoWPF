<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabuada.MainPage">

    <StackLayout>
        <Label Text="Tabuada" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" FontFamily="Comic Sans MS"/>
        <Entry x:Name="Num" Placeholder="Informe um numero" Keyboard="Numeric"/>
        <Button x:Name="Gerar" Text="Calcular" Clicked="Gerar_Clicked" FontFamily="Comic Sans MS" />
        <ListView x:Name="Tabuada"/>
    </StackLayout>

</ContentPage>
